{
  "name": "tarot-backend",
  "version": "1.0.0",
  "description": "Backend para aplicaci√≥n de lectura de Tarot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy:data",
    "copy:data": "copyfiles -u 1 \"src/data/**/*.json\" dist/",
    "start": "node dist/index.js",
    "start:prod": "npm run build && npm start",
    "postinstall": "npm run build"
  },
  "keywords": [
    "tarot",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
